extends layout
block body
  ul.photos
    li Loading photos from flickr
  :coffee
    $ ->
      window.photos = photos = new App.Photos()
      photoList = new App.PhotoList {collection: photos}
      photos.once "sync", ->
        $('ul.photos').replaceWith photoList.el
        photos.each (photo) -> photo.fetchInfo()
      photos.fetch()
